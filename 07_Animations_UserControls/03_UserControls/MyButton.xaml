<UserControl x:Class="_03_UserControls.MyButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_03_UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Name="myBtn">
    <Grid Name="myGrid">
        <Button Width="130" Height="50">
            <StackPanel Orientation="Horizontal">
                <TextBox Margin="5" Width="70"  Text="{Binding MyText, ElementName=myBtn}"></TextBox>
                    <Ellipse Margin="5" Width="30" Fill="{Binding MyColor, ElementName=myBtn}"></Ellipse>
                </StackPanel>
        </Button>
    </Grid>
</UserControl>
