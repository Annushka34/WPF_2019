                                <DoubleAnimation 
                                    Storyboard.TargetName="btn" 
                                    Storyboard.TargetProperty="(Button.RenderTransform).(RotateTransform.Angle)"
                                    From="5"
                                    To="-5"
                                    AutoReverse="True"
                                    RepeatBehavior="10"
                                    ></DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
            </Button>-->

            <Button Width="200" Height="70" Canvas.Left="400" Canvas.Top="20" Name="btn2">
                <Button.RenderTransform>
                    <SkewTransform AngleX="20" AngleY="0"></SkewTransform>
                </Button.RenderTransform>
                <Button.Triggers>
                    <EventTrigger RoutedEvent="Window.Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation 
                                    Storyboard.TargetName="btn2" 
                                    Storyboard.TargetProperty="(Button.RenderTransform).(SkewTransform.AngleX)"
                                    From="0"
                                    To="20"
                                    AutoReverse="True"
                                    RepeatBehavior="10"
                                    ></DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
            </Button>
        </Canvas>
    </Grid>
</Window>
