<Window x:Class="_03_DockPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_03_DockPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel LastChildFill="True">
            <Button DockPanel.Dock="Bottom" Background="Aqua">PRESS 1</Button>
            <Button DockPanel.Dock="Left"  Background="Aquamarine">PRESS 2</Button>
            <Button DockPanel.Dock="Right" Background="Azure">PRESS 3</Button>
            <Button DockPanel.Dock="Top" Background="Beige">PRESS 4</Button>
            <Button DockPanel.Dock="Top" Background="Black">PRESS 5</Button>
            <Button DockPanel.Dock="Left" Background="Blue" Padding="20" FontSize="25"> 6</Button>
            <Button DockPanel.Dock="Left" Background="BlueViolet" Click="Button_Click">PRESS 5</Button>
            <ListBox Name="myListBox">
                <ListBoxItem>1</ListBoxItem>
                <ListBoxItem>+</ListBoxItem>
                <ListBoxItem>1</ListBoxItem>
                <ListBoxItem>=</ListBoxItem>
            </ListBox>
        </DockPanel>
    </Grid>
</Window>
